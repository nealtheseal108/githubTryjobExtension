{
  "manifest_version": 3,
  "name": "Tryjobs Button Injector",
  "version": "1.0",
  "description": "Injects Tryjobs button into GitHub PR view",
  "permissions": ["scripting"],

  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "sl_logo.png"
  },
  "host_permissions": [
    "https://bryans-mac-mini.taila3b14e.ts.net/*"
  ]
}
