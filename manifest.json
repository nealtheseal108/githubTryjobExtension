{
  "manifest_version": 3,
  "name": "GitHub README Button",
  "version": "1.0",
  "description": "Injects a custom button into GitHub README files.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
